# LawX-Scraper Environment Variables Template
# Copie este arquivo para .env e preencha com suas chaves

#variavel para testes com pytest funcionar corretamente
PYTHONPATH="."

#variavel para o modulo UV para copiar os arquivos para o ambiente virtual
UV_LINK_MODE=copy

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
CATEGORIES_CSV_PATH=./docs/categorias.csv
METADATA_JSON_PATH=./docs/metadata.json

# Pinecone Vector Database Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment-here
PINECONE_CLOUD=your-pinecone-cloud-here
PINECONE_INDEX_NAME=your-pinecone-index-name-here

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Batch Processing Settings
BATCHSIZE_BACKUPCSV_GERAL=1000
BATCHSIZE_BACKUPCSV_FILTRADO=1000
BATCHSIZE_BACKUPCSV_VETORIZADO=100
BATCHSIZE_DEPLOY_VETOR=10
BATCHSIZE_CACHE_PROCESSOS=1000

# Download and Storage Settings
DEFAULT_DOWNLOAD_PATH=./downloads
CACHE_ENABLED=true
BACKUP_ENABLED=true

# Rate Limiting
REQUEST_DELAY=1
MAX_RETRIES=3
USER_AGENT=LawX-Scraper/1.0
PJE_BASE_URL=your-pje-base-url-here
PJE_AUTH_TOKEN=your-pje-auth-token-here

# Tribunais Configuration
TRIBUNAIS_SOURCE=configurações/tribunais.json
DOCS_SOURCE=configurações/docs.json
METADATA_JSON_PATH=./docs/metadata.json

# Security Settings
REMOVE_PII=true
ANONYMIZE_PARTIES=true

# Other configs
TF_CPP_MIN_LOG_LEVEL=3
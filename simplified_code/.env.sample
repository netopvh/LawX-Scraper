# LawX-Scraper Environment Variables Template
# Copie este arquivo para .env e preencha com suas chaves

#variavel para o modulo UV para copiar os arquivos para o ambiente virtual
UV_LINK_MODE=copy

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt4o-mini

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# Pinecone Vector Database Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=lawx-documents

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Batch Processing Settings (use os valores padr√£o do sistema)
BATCHSIZE_BACKUPCSV_GERAL=1000
BATCHSIZE_BACKUPCSV_FILTRADO=1000
BATCHSIZE_BACKUPCSV_VETORIZADO=100
BATCHSIZE_DEPLOY_VETOR=10
BATCHSIZE_CACHE_PROCESSOS=1000

# Download and Storage Settings
DEFAULT_DOWNLOAD_PATH=./downloads
CACHE_ENABLED=true
BACKUP_ENABLED=true

# Rate Limiting
REQUEST_DELAY=1
MAX_RETRIES=3
USER_AGENT=LawX-Scraper/1.0

# Security Settings
REMOVE_PII=true
ANONYMIZE_PARTIES=true

# Other configs
TF_CPP_MIN_LOG_LEVEL=3